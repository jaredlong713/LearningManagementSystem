@model LMS.UI.MVC.Models.ContactViewModel
@{
    ViewBag.Title = "Contact";
}

<div class="bradcam_area breadcam_bg overlay2">
    <h3>Contact Us</h3>
</div>

<section class="contact-section">
    <div class="container">
        <div class="d-none d-sm-block mb-5 pb-4">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Get in Touch</h2>
            </div>
            <div class="col-lg-8">
                @using (Html.BeginForm())
                { 
                    <form class="form-contact contact_form" method="post" id="contactForm" novalidate="novalidate">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter your Name" })
                            </div>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter your Email" })
                            </div>
                            <br /><br /><br />
                            <div class="col-12">
                                @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Enter Message" })
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" class="button button-contactForm boxed-btn" value="Send" />
                        </div>
                    </form>
                }
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Buttonwood, California.</h3>
                        <p>Rosemead, CA 91770</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+1 253 565 2365</h3>
                        <p>Mon to Fri 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>support@colorlib.com</h3>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </div>
</section>